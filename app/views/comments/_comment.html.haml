.comment
    .user-name
        - if comment.user
            = comment.user.username
    .comment-content
        = comment.content
    - if comment.user == current_user
        = link_to post_comment_path(post, comment), method: :delete, class: 'pull-right',data: { confirm: "Are you sure?" }, remote: true do
            %span(class="glyphicon glyphicon-remove delete-comment")