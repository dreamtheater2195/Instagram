.posts-wrapper.row
    -@posts.each do |post|
        .post
            .post-head
                .name
                    = post.user.username
                .time.pull-right
                    = time_ago_in_words(post.created_at)
            .image.center-block
                = link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post)
            %p.description.text-center
                = post.description
