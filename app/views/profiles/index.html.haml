.posts-wrapper
    .post 
        %h1.text-center All users
        %ul.users
            - @users.each do |user|
                %li
                    .pull-left
                        .img-circle
                            = profile_avatar_select(user)
                        %h3.profile-user-name
                            = link_to user.username, profile_path(user.username)
                    .pull-right
                        .button-follow
                            - if current_user_is_following(current_user.id, user.id)
                                = link_to 'Following', unfollow_user_path(user.username), remote: true, class: 'btn unfollow-button', id: 'unfollow-button', method: :post
                            - else 
                                = link_to 'Follow', follow_user_path(user.username), remote: true, class: 'btn follow-button', id: 'follow-button', method: :post